pipeline {
    agent any

    tools {
        jdk "JAVA_HOME"
        maven "M2_HOME"
    }

    environment {
        MVN_CLI_OPTS = '-DskipTests'
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Tahermabrouk1/devops-project.git'
            }
        }

        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }


        stage('Deploy to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-credentials', usernameVariable: 'admin', passwordVariable: 'taher131')]) {
                    sh """
                        mvn deploy \
                        -DaltDeploymentRepository=deploymentRepo::default::http://localhost:8081/repository/maven-releases/ \
                        -DskipTests \
                        --settings ~/.m2/settings.xml
                    """
                }
            }
        }
    }
}
