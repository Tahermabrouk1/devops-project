pipeline {
    agent any

    tools {
        jdk "JAVA_HOME"
        maven "M2_HOME"
    }

    environment {
        MVN_CLI_OPTS = '-DskipTests'
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Tahermabrouk1/devops-project.git'
            }
        }

        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Package Stage') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Building Docker Image') {
            steps {
                sh 'docker build -t tahermabrouk/devops-project:latest .'
            }
        }
           stage('deploy image') {
               steps {
                   sh """
                   docker login -u tahermabrouk1 --password-stdin taher+94244512
                   docker push tahermabrouk/devops-project:latest
                   """
               }
           }
    }
}
