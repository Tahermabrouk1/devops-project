pipeline {
    agent any

    tools {
        jdk "JAVA_HOME"
        maven "M2_HOME"
    }

    environment {
        MVN_CLI_OPTS = '-DskipTests'
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Tahermabrouk1/devops-project.git'
            }
        }

        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }


stage('Deploy to Nexus') {
    steps {
        sh """
            mvn deploy \
            -DaltDeploymentRepository=nexus-releases::default::http://localhost:8081/repository/maven-releases/ \
            -DrepositoryId=nexus-releases \
            -Dusername=admin \
            -Dpassword=taher131
        """
    }
}

    }
}
